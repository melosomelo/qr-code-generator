{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "module": "commonjs",
    "rootDir": "src",
    "declaration": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "target": "ES6"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests/**/*"]
}
